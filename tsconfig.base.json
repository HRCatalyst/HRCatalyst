{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hrc/associate-feature": ["libs/associate-feature/src/index.ts"],
      "@hrc/auth-feature": ["libs/auth-feature/src/index.ts"],
      "@hrc/campaign-feature": ["libs/campaign-feature/src/index.ts"],
      "@hrc/client-feature": ["libs/client-feature/src/index.ts"],
      "@hrc/company-feature": ["libs/company-feature/src/index.ts"],
      "@hrc/feedback-feature": ["libs/feedback-feature/src/index.ts"],
      "@hrc/home-feature": ["libs/home-feature/src/index.ts"],
      "@hrc/import-feature": ["libs/import-feature/src/index.ts"],
      "@hrc/interview-feature": ["libs/interview-feature/src/index.ts"],
      "@hrc/participant-feature": ["libs/participant-feature/src/index.ts"],
      "@hrc/question-feature": ["libs/question-feature/src/index.ts"],
      "@hrc/rater-feature": ["libs/rater-feature/src/index.ts"],
      "@hrc/shared-feature": ["libs/shared-feature/src/index.ts"],
      "@hrc/user-feature": ["libs/user-feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
